<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<VBox fx:controller="ru.geekbrains.home.chat.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea VBox.vgrow="ALWAYS" fx:id="mainTextArea" editable="false">
        <font>
            <Font name="Times New Roman" size="22.0"/>
        </font>
    </TextArea>
    <HBox>
        <TextField HBox.hgrow="ALWAYS" fx:id="mainTextField" promptText="Введите сообщение">
            <font>
                <Font name="Times New Roman" size="22.0"/>
            </font>
        </TextField>
        <Button HBox.hgrow="ALWAYS" maxWidth="-Infinity" onAction="#clickMeBtnAction">
            <font>
                <Font name="Times New Roman" size="22.0"/>
            </font>
            SEND
        </Button>
    </HBox>
</VBox>